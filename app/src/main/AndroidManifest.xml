<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 通知权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:name=".MoodApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HerMoodBarometer"
        android:enableOnBackInvokedCallback="true"
        android:localeConfig="@xml/locales_config">

        <!-- App Startup 初始化器配置：在进程启动时创建通知渠道等轻量任务 -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="com.lianglliu.hermoodbarometer.startup.NotificationInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="com.lianglliu.hermoodbarometer.startup.LocaleInitializer"
                android:value="androidx.startup" />
        </provider>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HerMoodBarometer"
            android:windowSoftInputMode="adjustResize">
            <!-- Android 13+ 通知权限提示的前置说明（可选），此处不声明 intent-filter，运行时触发请求 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 精准提醒广播接收器 -->
        <receiver
            android:name=".data.notification.ReminderReceiver"
            android:exported="false"/>
    </application>

</manifest>