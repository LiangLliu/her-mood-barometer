<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础应用主题 -->
    <style name="Theme.HerMoodBarometer" parent="Theme.SplashScreen">
        <!-- SplashScreen API 配置：背景 & 图标 -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.HerMoodBarometer.PostSplash</item>
    </style>

    <!-- Splash 之后的真实应用主题：沿用 DayNight，无 ActionBar -->
    <style name="Theme.HerMoodBarometer.PostSplash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>